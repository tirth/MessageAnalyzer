<Window x:Class="MessageAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message Analyzer" Height="280" Width="270">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="0, 10, 0, 0" Text="Services" FontSize="22" FontWeight="Light"/>
        <Button Name="FbButton" Height="50" Margin="0, 10, 0, 0" Content="FB" Click="FbButton_OnClick"/>
        <Button Name="WaButton" Height="50" Margin="0, 10, 0, 0" Content="WhatsApp" Click="WaButton_OnClick"/>
        <Button Name="SmsButton" Height="50" Margin="0, 10, 0, 0" Content="SMS" Click="SmsButton_OnClick"/>
        <TextBlock Name="StatusBlock" Margin="10,2,10,0" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
