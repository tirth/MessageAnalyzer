<Window x:Class="MessageAnalyzer.FreqDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageAnalyzer"
        mc:Ignorable="d"
        Title="Analyze Frequency" SizeToContent="Height" Width="300"
        ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <TextBlock x:Name="StatusBlock" Margin="10, 5, 10, 0" HorizontalAlignment="Right" FontWeight="Bold" Foreground="Red"/>
        <TextBlock Text="Conversation:" FontWeight="Light" Margin="10, 0, 10, 0" FontSize="18"/>
        <ComboBox x:Name="convoPicker" Margin="10, 5, 10, 5"/>
        <Button x:Name="AnalyzeButton" Content="ANALYZE" Margin="10, 10, 10, 10" IsDefault="True" Width="Auto" Height="200" FontSize="20" FontWeight="Bold"
                Click="AnalyzeClick"/>
    </StackPanel>
</Window>
